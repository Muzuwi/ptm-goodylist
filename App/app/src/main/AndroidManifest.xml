<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teambear.goodielist" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_main"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_main"
        android:supportsRtl="true"
        android:theme="@style/Theme.Goodielist"
        android:usesCleartextTraffic="true" >
        <activity
            android:name=".RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".testActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:label="@string/title_activity_test"
            android:theme="@style/Theme.Goodielist.Fullscreen" />
        <activity
            android:name=".LogInActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:label="@string/title_activity_log_in"
            android:theme="@style/Theme.Goodielist.Fullscreen" />
        <activity
            android:name=".EditTabPage"
            android:exported="true"
            android:label="@string/title_activity_edit_tab_page"
            android:theme="@style/Theme.Goodielist.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Goodielist.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>