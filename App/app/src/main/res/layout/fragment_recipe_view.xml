<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.lists.RecipeViewFragment">

    <TextView
        android:id="@+id/DetailsDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Description"
        app:layout_constraintEnd_toEndOf="@+id/DetailsName"
        app:layout_constraintStart_toStartOf="@+id/DetailsIcon"
        app:layout_constraintTop_toBottomOf="@+id/DetailsCategory" />

    <TextView
        android:id="@+id/DetailsName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/DetailsIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DetailsCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Category"
        app:layout_constraintStart_toStartOf="@+id/DetailsIcon"
        app:layout_constraintTop_toBottomOf="@+id/DetailsAuthor" />

    <TextView
        android:id="@+id/DetailsAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Author"
        app:layout_constraintStart_toStartOf="@+id/DetailsName"
        app:layout_constraintTop_toBottomOf="@+id/DetailsName" />

    <TextView
        android:id="@+id/DetailsCreated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="01.01.1970"
        app:layout_constraintEnd_toEndOf="@+id/DetailsName"
        app:layout_constraintTop_toBottomOf="@+id/DetailsName" />

    <TextView
        android:id="@+id/DetailsIngredients"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ingredients"
        app:layout_constraintEnd_toEndOf="@+id/DetailsName"
        app:layout_constraintStart_toStartOf="@+id/DetailsIcon"
        app:layout_constraintTop_toBottomOf="@+id/DetailsDescription" />

    <TextView
        android:id="@+id/DetailsSteps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Steps"
        app:layout_constraintEnd_toEndOf="@+id/DetailsName"
        app:layout_constraintStart_toStartOf="@+id/DetailsIcon"
        app:layout_constraintTop_toBottomOf="@+id/DetailsIngredients" />

    <ImageView
        android:id="@+id/DetailsIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/icon_breakfest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>